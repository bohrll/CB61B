public class TriangleDrawer {
    public static void drawTriangle(int N) {
        int x = 0;
        int y = 0;
        while (x < N) {
            int y = 0;  // y needs to be reset for each line
            while (y <= x) {
                System.out.print("*");
                y = y + 1;
            }
            System.out.println();  // move to the next line after each row
            x = x + 1;
        }
    }

    public static void main(String[] args) {
        drawTriangle(10);
    }
}
